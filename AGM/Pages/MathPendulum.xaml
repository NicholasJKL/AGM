<Page x:Class="AGM.MathPendulum"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AGM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MathPendulum">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Margin="16" Grid.Column="0">
            <StackPanel Margin="10" VerticalAlignment="Top">

                <Button x:Name="goBack" 
                     Content="Назад"
                     Width="100"
                     Margin="0 0 0 10"
                     HorizontalAlignment="Left"
                     Click="GoBack"/>

                <TextBlock Margin="0 0 0 5" Text="Длина подвеса l:"/>
                <TextBox x:Name="lenTextBox" 
                     Text="5"
                     Margin="0 0 0 10"
                     Padding="2"
                     Width="120"
                     HorizontalAlignment="Left"
                     TextChanged="ResultToEmpty"/>

                <TextBlock Margin="0 0 0 5" Text="Угол θ:"/>
                <TextBox x:Name="angleTextBox" 
                     Text="2"
                     Margin="0 0 0 15"
                     Padding="2"
                     Width="120"
                     HorizontalAlignment="Left"
                     TextChanged="ResultToEmpty"/>

                <TextBlock Margin="0 0 0 5" Text="Ускорение свободного падения:"/>
                <TextBox x:Name="gTextBox" 
                     Text="9,81"
                     Margin="0 0 0 15"
                     Padding="2"
                     Width="120"
                     HorizontalAlignment="Left"
                     TextChanged="ResultToEmpty"/>

                <Button x:Name="calculateButton" 
                     Content="Рассчитать"
                     Margin="0 0 0 10"
                     Width="100"
                     HorizontalAlignment="Left"
                     Click="Calculate"/>

                <TextBlock x:Name="pendulumPeriodResult"
                Text="Результат T = "/>

                <TextBlock x:Name="errorMessage"
                    Margin="0 0 0 5" 
                    Text="Ошибка в вводе!"
                    Foreground="Red"
                    Visibility="Hidden"/>
            </StackPanel>

        </Grid>
        <Image Grid.Column="1"
        Margin="0 10 0 0"
        Source="../Assets/MathPendulum.jpg"
        HorizontalAlignment="Stretch"
        StretchDirection="DownOnly"/>

    </Grid>
</Page>
